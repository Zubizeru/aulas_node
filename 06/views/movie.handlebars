<div id="movie-page">
  <a href="/movies" class="btn-back">Voltar</a>
  <div class="container">
    <h1>{{movie.title}}</h1>
    <p><strong>Diretor:</strong> {{movie.director}}</p>
    <p><strong>Ano de lançamento:</strong> {{movie.year}}</p>
    <p><strong>Gênero:</strong> {{movie.genre}}</p>
    <p><strong>Duração:</strong> {{movie.duration}} minutos</p>
    <div class="actions">
      <a href="/movies/edit/{{movie.id}}">Editar</a>
      <form action="/movies/remove/{{movie.id}}" method="POST">
        <input type="submit" value="Remover">
      </form>
    </div>
  </div>
</div>